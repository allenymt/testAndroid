<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:onClick="testAnr"
        android:id="@+id/test1"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!22"
        android:onClick="testAnr2"
        android:id="@+id/test2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test1" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go_to_link_test"
        android:onClick="toLink"
        android:id="@+id/go_to_link"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testViewModel"
        android:onClick="testViewModel"
        android:id="@+id/test3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/go_to_link" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go_to_touch_ac"
        android:onClick="goToTouchAc"
        android:id="@+id/test_touch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go_to_launch_ac"
        android:onClick="goToLaunchAc"
        android:id="@+id/test_launch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_touch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go_to_self_View"
        android:onClick="goToSelfView"
        android:id="@+id/test_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_launch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go_to_oom_ac"
        android:onClick="goToOomDemo"
        android:id="@+id/oom_test_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_view" />

</android.support.constraint.ConstraintLayout>